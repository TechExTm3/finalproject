{
    "version": "3",
    "services": {
      "web": {
        "build": ".",
        "container_name": "flask_app",
        "ports": [
          "8000:8000"
        ],
        "environment": {
          "FLASK_ENV": "development"
        },
        "volumes": [
          ".:/app"
        ],
        "depends_on": [
          "redis"
        ]
      },
      "redis": {
        "image": "redis:alpine",
        "container_name": "redis_cache",
        "ports": [
          "6379:6379"
        ]
      }
    }
  }